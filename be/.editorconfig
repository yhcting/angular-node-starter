# Editor configuration, see http://editorconfig.org

# top-most EditorConfig file
root = true

[*]
charset = utf-8
indent_style = space
end_of_line = lf
indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = true

[{*.html,*.scss,*.css,*.js,package.json}]
indent_size = 2

[*.md]
max_line_length = off
trim_trailing_whitespace = false
